<h3 class="text-center">Adding New Article</h3>

<div class="row">
  <div class="col-md-12">
    <%= form_with @article do |form| %>
      <%= form.text_field :Title, value: "Creating a blog" %>
      <%= form.text_field :Body, value: "Lorem Ipsum" %>
      <%= form.submit "Create Article" %>
    <% end %>
  </div>
</div>