<article class="detail-article">
  <h1 class="article-detail-title">
    <%= @article.title %>
  </h1>

  <div class="glyphicon glyphicon-calendar" id="article-date">
    <%= @article.created_at.strftime("%b %d, %Y") %>
  </div>
  
  <div class="article-body">
    <%= @article.body %>
  </div>

  <div class="edit-delete">
    <%= link_to 'Edit Article', edit_article_path(@article), class: "btn btn-warning btn-xl btn-space mt-5" %>
    <%= link_to 'Delete Article', @article, class: "btn btn-danger btn-xl btn-space mt-5", 
                                            method: :delete, data: {confirm: "Are you sure you want to delete article?"} %>
  </div>
</article>